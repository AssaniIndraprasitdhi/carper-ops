<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ระบบวางแผนผ้าใบ</title>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="@ViewData["BodyClass"]">
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container-fluid px-3">
            <a class="navbar-brand" href="/">
                <i class="bi bi-grid-3x3-gap-fill me-1"></i>ระบบวางแผนผ้าใบ
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Layout" asp-action="Index">
                            <i class="bi bi-layout-wtf me-1"></i>Layout Planning
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Layout" asp-action="Plans">
                            <i class="bi bi-list-check me-1"></i>Plans
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Report" asp-action="Index">
                            <i class="bi bi-rulers me-1"></i>รายงานเผื่อ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Report" asp-action="Glue">
                            <i class="bi bi-droplet me-1"></i>กรอกกาว
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="loading-overlay d-none">
        <div class="loading-content">
            <div class="spinner-border mb-2" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p id="loading-message" class="mb-0">Loading...</p>
        </div>
    </div>

    <main class="@(ViewData["BodyClass"]?.ToString() == "fullscreen-page" ? "main-fullscreen" : "container-fluid px-3 py-3")">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
