@{
    ViewData["Title"] = "Plans";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <h4 class="fw-bold mb-0"><i class="bi bi-list-check me-2"></i>รายการแผน</h4>
    <div class="d-flex gap-2">
        <select id="statusFilter" class="form-select form-select-sm" style="width: auto;">
            <option value="">ทั้งหมด</option>
            <option value="planned">Planned</option>
            <option value="completed">Completed</option>
            <option value="cancelled">Cancelled</option>
        </select>
        <button id="btnRefresh" class="btn btn-sm btn-outline-primary">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>รหัสแผน</th>
                        <th>ชนิดผ้าใบ</th>
                        <th>ความกว้าง (ม.)</th>
                        <th>จำนวนชิ้น</th>
                        <th>ประสิทธิภาพ</th>
                        <th>พื้นที่ใช้ (ตร.ม.)</th>
                        <th>สูญเสีย (ตร.ม.)</th>
                        <th>สถานะ</th>
                        <th>วันที่สร้าง</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>
                <tbody id="plansTableBody">
                    <tr><td colspan="10" class="text-center text-muted py-4">Loading...</td></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center py-4">
                <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 3rem;"></i>
                <h5 class="mt-3 fw-bold">ยืนยันการลบ</h5>
                <p class="text-muted">ต้องการลบแผน <strong id="deletePlanCode"></strong> หรือไม่?</p>
                <p class="small text-danger">Orders ที่อยู่ในแผนนี้จะกลับไปแสดงในรายการ</p>
                <div class="mt-3">
                    <button id="btnConfirmDelete" class="btn btn-danger me-2">ลบ</button>
                    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plan-manager.js" asp-append-version="true"></script>
}
