@{
    ViewData["Title"] = "Plans";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <div class="d-flex align-items-center gap-2">
        <div class="plans-icon-box">
            <i class="bi bi-clipboard2-data"></i>
        </div>
        <div>
            <h5 class="fw-bold mb-0">รายการแผน</h5>
            <span class="text-muted" style="font-size:0.75rem;" id="plansSummary">กำลังโหลด...</span>
        </div>
    </div>
    <div class="d-flex align-items-center gap-2">
        <select id="statusFilter" class="form-select form-select-sm plans-filter-select">
            <option value="">ทุกสถานะ</option>
            <option value="planned">Planned</option>
            <option value="completed">Completed</option>
            <option value="cancelled">Cancelled</option>
        </select>
        <button id="btnRefresh" class="btn btn-sm btn-outline-secondary plans-refresh-btn" title="รีเฟรช">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
</div>

<!-- Plans Table -->
<div class="plans-table-card">
    <div class="table-responsive">
        <table class="table plans-table mb-0">
            <thead>
                <tr>
                    <th class="ps-3">รหัสแผน</th>
                    <th>ชนิดผ้าใบ</th>
                    <th class="text-center">กว้าง</th>
                    <th class="text-center">ชิ้น</th>
                    <th class="text-center">ประสิทธิภาพ</th>
                    <th class="text-end">ใช้จริง</th>
                    <th class="text-end">สูญเสีย</th>
                    <th class="text-center">สถานะ</th>
                    <th>วันที่สร้าง</th>
                    <th class="text-center pe-3" style="width:80px;"></th>
                </tr>
            </thead>
            <tbody id="plansTableBody">
                <tr><td colspan="10" class="text-center text-muted py-4">
                    <div class="spinner-border spinner-border-sm text-primary me-2" role="status"></div>กำลังโหลด...
                </td></tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: 14px;">
            <div class="modal-body text-center py-4 px-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width:52px;height:52px;background:#fef3c7;">
                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 1.4rem; color: #d97706;"></i>
                </div>
                <h6 class="fw-bold">ยืนยันการลบ</h6>
                <p class="text-muted mb-1 small">ต้องการลบแผน <strong id="deletePlanCode"></strong> หรือไม่?</p>
                <p class="small mb-3" style="color: var(--red);">Orders ที่อยู่ในแผนนี้จะกลับไปแสดงในรายการ</p>
                <div class="d-flex justify-content-center gap-2">
                    <button class="btn btn-outline-secondary btn-sm px-3" data-bs-dismiss="modal">ยกเลิก</button>
                    <button id="btnConfirmDelete" class="btn btn-danger btn-sm px-3">
                        <i class="bi bi-trash me-1"></i>ลบแผน
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plan-manager.js" asp-append-version="true"></script>
}
