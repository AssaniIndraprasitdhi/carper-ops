@{
    ViewData["Title"] = "Layout Planning";
    ViewData["BodyClass"] = "fullscreen-page";
}

<!-- Top Toolbar -->
<div class="toolbar-row d-flex align-items-center gap-2 px-3 py-2">
    <div class="d-flex align-items-center gap-2">
        <label class="text-nowrap small fw-medium mb-0 text-muted">Texture</label>
        <select id="cnvIdSelect" class="form-select form-select-sm" style="width: 220px;">
            <option value="">-- เลือก Texture --</option>
        </select>
    </div>
    <div class="d-flex align-items-center gap-2">
        <select id="rollWidthFilter" class="form-select form-select-sm" style="width: 150px;">
            <option value="">ทุกขนาด</option>
        </select>
    </div>
    <div class="ms-auto d-flex gap-2">
        <button id="btnLoadOrders" class="btn btn-sm btn-success" disabled>
            <i class="bi bi-download me-1"></i>โหลดข้อมูล
        </button>
        <button id="btnCalculate" class="btn btn-sm btn-primary" disabled>
            <i class="bi bi-calculator me-1"></i>คำนวณ
        </button>
        <button id="btnExportCsv" class="btn btn-sm btn-outline-light d-none">
            <i class="bi bi-file-earmark-excel me-1"></i>Excel
        </button>
        <button id="btnRefresh" class="btn btn-sm btn-outline-light" title="Refresh">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>
</div>

<!-- Main: Sidebar + Content -->
<div class="d-flex flex-grow-1 overflow-hidden">
    <!-- Left Sidebar -->
    <div class="sidebar-panel d-flex flex-column">
        <div class="sidebar-header px-3 py-2 d-flex justify-content-between align-items-center">
            <span class="fw-medium small">
                <i class="bi bi-list-ul me-1"></i>รายการพรม
                <span id="orderCount" class="badge bg-light text-dark ms-1" style="font-size:0.65rem;">0</span>
            </span>
            <span id="selectedCount" class="badge bg-warning text-dark d-none" style="font-size:0.65rem;">0 เลือก</span>
        </div>
        <div class="px-3 py-2 border-bottom">
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="checkSelectAll">
                <label class="form-check-label small" for="checkSelectAll">เลือกทั้งหมด</label>
            </div>
            <input type="text" id="orderSearch" class="form-control form-control-sm" placeholder="ค้นหา Barcode, Order...">
        </div>
        <!-- OrderType Tabs (Group By) -->
        <div class="px-2 pt-2 border-bottom">
            <ul class="nav nav-pills nav-fill" id="orderTypeTabs">
                <li class="nav-item">
                    <a class="nav-link active small py-1 px-2" data-filter="" href="#">ทั้งหมด</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link small py-1 px-2" data-filter="Order" href="#">Order</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link small py-1 px-2" data-filter="Sample" href="#">Sample</a>
                </li>
            </ul>
        </div>
        <!-- Order Items -->
        <div id="ordersList" class="flex-grow-1 overflow-auto">
            <div class="text-center text-muted py-5 small">
                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                <p class="mt-2 mb-0">เลือก Texture แล้วกดโหลดข้อมูล</p>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column overflow-hidden">
        <!-- Color Legend -->
        <div id="colorLegend" class="d-none px-3 py-2 border-bottom bg-white d-flex align-items-center gap-3">
            <small class="text-muted fw-medium">Roll Width:</small>
            <div id="legendItems" class="d-flex gap-3"></div>
            <div class="ms-auto small text-muted" id="resultSummary"></div>
        </div>
        <!-- Algorithm Cards Grid -->
        <div id="resultsContainer" class="flex-grow-1 overflow-auto p-3">
            <div id="algorithmCards" class="row g-3">
                <div class="col-12 text-center text-muted py-5">
                    <i class="bi bi-calculator" style="font-size: 3rem; opacity: 0.3;"></i>
                    <p class="mt-2 mb-0">เลือก Orders แล้วกดคำนวณเพื่อเปรียบเทียบ Algorithm</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detail Modal -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title" id="detailModalTitle">Layout Detail</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-3">
                <div class="row g-3">
                    <div class="col-md-8">
                        <div id="detailCanvasContainer" style="max-height: 500px; overflow: auto;">
                            <canvas id="detailCanvas"></canvas>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div id="detailMetrics"></div>
                        <div id="detailItems" class="mt-3" style="max-height: 300px; overflow-y: auto;"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer py-2">
                <button id="btnSaveFromDetail" class="btn btn-sm btn-primary">
                    <i class="bi bi-save me-1"></i>บันทึกแผนนี้
                </button>
                <button id="btnDownloadPng" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-download me-1"></i>Download PNG
                </button>
                <button class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">ปิด</button>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content text-center">
            <div class="modal-body py-4">
                <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                <h5 class="mt-3">บันทึกสำเร็จ</h5>
                <p class="text-muted small">Plan Code: <strong id="savedPlanCode"></strong></p>
                <a id="btnViewPlan" href="#" class="btn btn-sm btn-primary me-2">ดูรายละเอียด</a>
                <button class="btn btn-sm btn-outline-secondary" data-bs-dismiss="modal">ปิด</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/canvas-renderer.js" asp-append-version="true"></script>
    <script src="~/js/layout-planner.js" asp-append-version="true"></script>
}
