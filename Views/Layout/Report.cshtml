@model Capet_OPS.Models.Entities.LayoutPlan
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Layout - @Model.PlanCode</title>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * { font-family: 'Kanit', sans-serif; margin: 0; padding: 0; box-sizing: border-box; }
        html, body { height: 100%; overflow: hidden; background: #fff; color: #2d3436; }
        body { display: flex; flex-direction: column; padding: 8mm; }

        .header {
            display: flex; justify-content: space-between; align-items: center;
            border-bottom: 3px solid #0d2137; padding-bottom: 6px; margin-bottom: 6px;
            flex-shrink: 0;
        }
        .header h1 { font-size: 16px; color: #0d2137; font-weight: 700; }
        .header .subtitle { font-size: 10px; color: #666; }
        .header .plan-code {
            font-size: 13px; font-weight: 700; color: #0d47a1;
            background: #e3f2fd; padding: 4px 10px; border-radius: 6px;
        }

        .info-bar {
            display: flex; gap: 16px; align-items: center; flex-wrap: wrap;
            font-size: 11px; color: #555; margin-bottom: 6px; flex-shrink: 0;
        }
        .info-bar .item { display: flex; align-items: center; gap: 4px; }
        .info-bar .label { color: #999; font-size: 9px; }
        .info-bar .val { font-weight: 600; color: #0d2137; }

        .canvas-wrap {
            flex: 1; min-height: 0;
            border: 1px solid #ddd; border-radius: 6px; background: #fafafa;
            padding: 4px; display: flex; align-items: flex-start; justify-content: flex-start;
            overflow-x: auto; overflow-y: hidden;
        }
        .canvas-wrap canvas { display: block; }

        .footer {
            margin-top: 6px; padding-top: 4px; border-top: 1px solid #ddd;
            display: flex; justify-content: space-between; font-size: 9px; color: #aaa;
            flex-shrink: 0;
        }

        .no-print { margin-bottom: 6px; text-align: center; flex-shrink: 0; }
        .no-print button {
            padding: 5px 18px; border: none; border-radius: 6px; cursor: pointer;
            font-family: 'Kanit'; font-size: 11px; font-weight: 500; margin: 0 4px;
        }
        .btn-print { background: linear-gradient(135deg, #0d47a1, #1976d2); color: #fff; }
        .btn-back { background: #eee; color: #555; }

        .zoom-bar {
            position: fixed; bottom: 16px; right: 16px;
            display: flex; align-items: center; gap: 4px;
            background: rgba(13,33,55,0.9); border-radius: 8px;
            padding: 4px 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.25);
        }
        .zoom-bar button {
            width: 28px; height: 28px; border: none; border-radius: 6px;
            background: rgba(255,255,255,0.15); color: #fff; font-size: 16px;
            cursor: pointer; font-family: 'Kanit'; display: flex; align-items: center; justify-content: center;
        }
        .zoom-bar button:hover { background: rgba(255,255,255,0.3); }
        .zoom-bar .zoom-label {
            color: #fff; font-size: 11px; min-width: 44px; text-align: center; font-weight: 500;
        }

        /* Legend table — print only */
        .print-legend { display: none; }

        /* — Mobile — */
        @@media (max-width: 767px) {
            body { padding: 4mm; overflow: auto; height: auto; }
            .header { flex-direction: column; align-items: flex-start; gap: 4px; }
            .header .plan-code { font-size: 11px; }
            .info-bar { font-size: 10px; gap: 10px; }
            .canvas-wrap { flex: none; min-height: 40vh; max-height: 60vh; overflow: auto; }
            .zoom-bar { bottom: 8px; right: 8px; padding: 3px 6px; }
            .zoom-bar button { width: 24px; height: 24px; font-size: 14px; }
            .zoom-bar .zoom-label { font-size: 10px; min-width: 36px; }
            .no-print button { padding: 4px 12px; font-size: 10px; }
        }
        @@media (max-width: 480px) {
            body { padding: 2mm; }
            .header h1 { font-size: 13px; }
            .header .subtitle { font-size: 9px; }
            .info-bar { font-size: 9px; gap: 6px; flex-wrap: wrap; }
            .canvas-wrap { min-height: 30vh; max-height: 50vh; border-radius: 4px; }
            .footer { font-size: 8px; }
        }

        @@media print {
            html, body { height: auto; overflow: visible; }
            body { padding: 5mm; }
            .no-print, .zoom-bar { display: none !important; }
            .canvas-wrap { flex: none; height: 85vh; page-break-after: always; }
            .print-legend {
                display: block; page-break-inside: avoid;
            }
            .print-legend h3 { font-size: 11px; margin-bottom: 4px; color: #0d2137; }
            .print-legend table {
                width: 100%; border-collapse: collapse; font-size: 9px;
            }
            .print-legend th {
                background: #0d2137; color: #fff; padding: 3px 6px;
                text-align: left; font-weight: 500;
            }
            .print-legend td {
                padding: 2px 6px; border-bottom: 1px solid #eee;
            }
            .print-legend tr:nth-child(even) { background: #f8f9fa; }
            .print-legend .color-swatch {
                display: inline-block; width: 12px; height: 12px;
                border-radius: 2px; vertical-align: middle; margin-right: 4px;
            }
        }
    </style>
</head>
<body>
    <div class="no-print">
        <button class="btn-print" onclick="window.print()">&#128424; พิมพ์ / บันทึก PDF</button>
        <button class="btn-back" onclick="window.close()">ปิดหน้านี้</button>
    </div>

    <div class="header">
        <div>
            <h1>Layout Report</h1>
            <div class="subtitle">@Model.CanvasType?.CnvDesc</div>
        </div>
        <div class="plan-code">@Model.PlanCode</div>
    </div>

    <div class="info-bar">
        <div class="item"><span class="label">กว้าง</span> <span class="val">@Model.RollWidth m</span></div>
        <div class="item"><span class="label">ยาว</span> <span class="val">@Model.TotalLength m</span></div>
        <div class="item"><span class="label">ชิ้น</span> <span class="val">@Model.PieceCount</span></div>
        <div class="item"><span class="label">วันที่</span> <span class="val">@Model.CreatedAt.ToString("yyyy-MM-dd")</span></div>
    </div>

    <div class="canvas-wrap" id="canvasContainer">
        <canvas id="reportCanvas"></canvas>
    </div>

    <div class="zoom-bar" id="zoomBar">
        <button id="btnZoomOut">−</button>
        <span class="zoom-label" id="zoomLabel">100%</span>
        <button id="btnZoomIn">+</button>
        <button id="btnZoomReset" style="font-size:11px; width:auto; padding:0 8px;">Reset</button>
    </div>

    <div class="print-legend" id="printLegend"></div>

    <div class="footer">
        <span>ระบบวางแผนผ้าใบ</span>
        <span>พิมพ์เมื่อ: <script>document.write(new Date().toLocaleString('th-TH'))</script></span>
    </div>

    <script src="/js/canvas-renderer.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const planData = @Html.Raw(Model.LayoutJson ?? "[]");
            const rollWidth = @Model.RollWidth;
            const totalLength = @Model.TotalLength;

            if (planData && planData.length > 0) {
                // สลับแกน: X = ความยาว (แนวนอน), Y = ความกว้าง (แนวตั้ง)
                const result = {
                    rollWidth: totalLength,   // X axis = ความยาวผ้า
                    totalLength: rollWidth,    // Y axis = ความกว้างผ้า
                    packedItems: planData.map(item => ({
                        packX: item.PackY ?? item.packY,           // Y→X (ตำแหน่งยาว→แนวนอน)
                        packY: item.PackX ?? item.packX,           // X→Y (ตำแหน่งกว้าง→แนวตั้ง)
                        packWidth: item.PackLength ?? item.packLength,  // ยาว→แนวนอน
                        packLength: item.PackWidth ?? item.packWidth,   // กว้าง→แนวตั้ง
                        orno: item.ORNO ?? item.orno ?? item.oRNO,
                        barcodeNo: item.BarcodeNo ?? item.barcodeNo,
                        originalWidth: item.OriginalWidth ?? item.originalWidth,
                        originalLength: item.OriginalLength ?? item.originalLength,
                        isRotated: item.IsRotated ?? item.isRotated
                    }))
                };
                const renderer = new CanvasRenderer('reportCanvas');
                renderer.setFitMode('height');
                renderer.render(result);

                // Zoom controls
                const zoomLabel = document.getElementById('zoomLabel');
                const updateLabel = (z) => { zoomLabel.textContent = Math.round(z * 100) + '%'; };
                renderer._onZoomChange = updateLabel;

                document.getElementById('btnZoomIn').addEventListener('click', () => renderer.zoomIn());
                document.getElementById('btnZoomOut').addEventListener('click', () => renderer.zoomOut());
                document.getElementById('btnZoomReset').addEventListener('click', () => renderer.zoomReset());

                // Ctrl + Mouse wheel zoom
                document.getElementById('canvasContainer').addEventListener('wheel', (e) => {
                    if (!e.ctrlKey) return;
                    e.preventDefault();
                    if (e.deltaY < 0) renderer.zoomIn();
                    else renderer.zoomOut();
                }, { passive: false });

                // Print data: แกนดั้งเดิม X=กว้าง Y=ยาว (wrap columns)
                const printResult = {
                    rollWidth: rollWidth,
                    totalLength: totalLength,
                    packedItems: planData.map(item => ({
                        packX: item.PackX ?? item.packX,
                        packY: item.PackY ?? item.packY,
                        packWidth: item.PackWidth ?? item.packWidth,
                        packLength: item.PackLength ?? item.packLength,
                        orno: item.ORNO ?? item.orno ?? item.oRNO,
                        barcodeNo: item.BarcodeNo ?? item.barcodeNo,
                        originalWidth: item.OriginalWidth ?? item.originalWidth,
                        originalLength: item.OriginalLength ?? item.originalLength,
                        isRotated: item.IsRotated ?? item.isRotated
                    }))
                };

                // Build print legend table
                const legendEl = document.getElementById('printLegend');
                const items = printResult.packedItems;
                let rows = items.map((it, i) => {
                    const color = renderer._getItemColor(it);
                    const w = it.packWidth, l = it.packLength;
                    const area = (w * l).toFixed(2);
                    const rot = it.isRotated ? 'R' : '';
                    return `<tr>
                        <td><span class="color-swatch" style="background:${color}"></span>#${i + 1}</td>
                        <td>${it.orno || ''}</td>
                        <td>${it.barcodeNo || ''}</td>
                        <td>${it.originalWidth || w} x ${it.originalLength || l} m</td>
                        <td>${w} x ${l} m ${rot}</td>
                        <td>${area}</td>
                    </tr>`;
                }).join('');
                legendEl.innerHTML = `<h3>รายละเอียดชิ้นผ้า (${items.length} ชิ้น)</h3>
                    <table>
                        <thead><tr><th>#</th><th>Order</th><th>Barcode</th><th>ขนาดจริง</th><th>ขนาดวาง</th><th>ตร.ม.</th></tr></thead>
                        <tbody>${rows}</tbody>
                    </table>`;

                // Print: wrap mode เต็มจอเหมือนหน้า Algorithms
                window.addEventListener('beforeprint', () => {
                    renderer.setZoom(1.0, false);
                    renderer.noWrap = false;
                    renderer.fitMode = 'fit';
                    renderer.render(printResult);
                });
                window.addEventListener('afterprint', () => {
                    renderer.noWrap = false;
                    renderer.fitMode = 'height';
                    renderer.setFitMode('height');
                    renderer.render(result);
                });
            }
        });
    </script>
</body>
</html>
